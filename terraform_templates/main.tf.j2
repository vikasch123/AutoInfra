terraform {
  required_version = ">= 1.0"
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

provider "aws" {
  region = var.region
}

# Data source for availability zones
data "aws_availability_zones" "available" {
  state = "available"
}

# VPC
resource "aws_vpc" "main" {
  cidr_block           = "10.0.0.0/16"
  enable_dns_hostnames = true
  enable_dns_support   = true

  tags = {
    Name = "${var.app_name}-vpc"
  }
}

# Internet Gateway
resource "aws_internet_gateway" "main" {
  vpc_id = aws_vpc.main.id

  tags = {
    Name = "${var.app_name}-igw"
  }
}

# Public Subnet
resource "aws_subnet" "public" {
  vpc_id                  = aws_vpc.main.id
  cidr_block              = "10.0.1.0/24"
  availability_zone       = data.aws_availability_zones.available.names[0]
  map_public_ip_on_launch = true

  tags = {
    Name = "${var.app_name}-public-subnet"
  }
}

# Private Subnet for Database
{% if database != "none" %}
resource "aws_subnet" "private" {
  vpc_id            = aws_vpc.main.id
  cidr_block        = "10.0.2.0/24"
  availability_zone = data.aws_availability_zones.available.names[0]

  tags = {
    Name = "${var.app_name}-private-subnet"
  }
}
{% endif %}

# Route Table for Public Subnet
resource "aws_route_table" "public" {
  vpc_id = aws_vpc.main.id

  route {
    cidr_block = "0.0.0.0/0"
    gateway_id = aws_internet_gateway.main.id
  }

  tags = {
    Name = "${var.app_name}-public-rt"
  }
}

# Route Table Association for Public Subnet
resource "aws_route_table_association" "public" {
  subnet_id      = aws_subnet.public.id
  route_table_id = aws_route_table.public.id
}

{% if load_balancer %}
# Security Group for ALB
resource "aws_security_group" "alb" {
  name        = "${var.app_name}-alb-sg"
  description = "Security group for Application Load Balancer"
  vpc_id      = aws_vpc.main.id

  ingress {
    description = "HTTP"
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "${var.app_name}-alb-sg"
  }
}
{% endif %}

# Security Group for Application Instances
resource "aws_security_group" "app" {
  name        = "${var.app_name}-app-sg"
  description = "Security group for {{ app }} application instances"
  vpc_id      = aws_vpc.main.id

{% if load_balancer %}
  ingress {
    description     = "HTTP from ALB"
    from_port       = 80
    to_port         = 80
    protocol        = "tcp"
    security_groups = [aws_security_group.alb.id]
  }
{% else %}
  ingress {
    description = "HTTP from Internet"
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }
{% endif %}

  ingress {
    description = "SSH"
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "${var.app_name}-app-sg"
  }
}

{% if database != "none" %}
# Security Group for Database
resource "aws_security_group" "database" {
  name        = "${var.app_name}-{{ database }}-sg"
  description = "Security group for {{ database }} instance"
  vpc_id      = aws_vpc.main.id

  ingress {
    description     = "{{ database|upper }} from App"
    from_port       = {% if database == "mysql" %}3306{% elif database == "postgresql" %}5432{% elif database == "mongodb" %}27017{% elif database == "redis" %}6379{% else %}3306{% endif %}
    to_port         = {% if database == "mysql" %}3306{% elif database == "postgresql" %}5432{% elif database == "mongodb" %}27017{% elif database == "redis" %}6379{% else %}3306{% endif %}
    protocol        = "tcp"
    security_groups = [aws_security_group.app.id]
  }

  ingress {
    description = "SSH"
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "${var.app_name}-{{ database }}-sg"
  }
}
{% endif %}

{% if load_balancer %}
# Application Load Balancer
resource "aws_lb" "main" {
  name               = "${var.app_name}-alb"
  internal           = false
  load_balancer_type = "application"
  security_groups    = [aws_security_group.alb.id]
  subnets            = [aws_subnet.public.id]

  enable_deletion_protection = false

  tags = {
    Name = "${var.app_name}-alb"
  }
}

# Target Group for ALB
resource "aws_lb_target_group" "app" {
  name     = "${var.app_name}-tg"
  port     = 80
  protocol = "HTTP"
  vpc_id   = aws_vpc.main.id

  health_check {
    enabled             = true
    healthy_threshold   = 2
    unhealthy_threshold = 2
    timeout             = 5
    interval            = 30
    path                = "/"
    protocol            = "HTTP"
    matcher             = "200"
  }

  tags = {
    Name = "${var.app_name}-tg"
  }
}

# ALB Listener
resource "aws_lb_listener" "main" {
  load_balancer_arn = aws_lb.main.arn
  port              = "80"
  protocol          = "HTTP"

  default_action {
    type             = "forward"
    target_group_arn = aws_lb_target_group.app.arn
  }
}
{% endif %}

# Application EC2 Instances
{% for i in range(1, app_count + 1) %}
resource "aws_instance" "app{{ i }}" {
  ami                    = data.aws_ami.amazon_linux.id
  instance_type          = var.instance_type
  subnet_id              = aws_subnet.public.id
  vpc_security_group_ids = [aws_security_group.app.id]
  key_name               = var.key_name

  user_data = <<-EOF
              #!/bin/bash
              yum update -y
              {% if app == "golang" %}
              # Install Go
              yum install -y golang
              {% elif app == "nodejs" %}
              yum install -y nodejs npm
              npm install -g pm2
              {% elif app == "python" %}
              yum install -y python3 python3-pip
              {% elif app == "java" %}
              yum install -y java-11-amazon-corretto
              {% elif app == "dotnet" %}
              # Install .NET Core
              yum install -y dotnet-sdk-6.0
              {% elif app == "php" %}
              yum install -y php php-fpm
              {% elif app == "ruby" %}
              yum install -y ruby
              {% elif app == "rust" %}
              # Install Rust
              curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
              {% else %}
              # Generic application setup
              yum install -y git
              {% endif %}
              # Your {{ app }} application setup here
              EOF

  tags = {
    Name = "${var.app_name}-instance-{{ i }}"
  }
}

{% if load_balancer %}
resource "aws_lb_target_group_attachment" "app{{ i }}" {
  target_group_arn = aws_lb_target_group.app.arn
  target_id        = aws_instance.app{{ i }}.id
  port             = 80
}
{% endif %}
{% endfor %}

{% if database != "none" %}
# Database EC2 Instance
resource "aws_instance" "database" {
  ami                    = data.aws_ami.amazon_linux.id
  instance_type          = var.instance_type
  subnet_id              = aws_subnet.private.id
  vpc_security_group_ids = [aws_security_group.database.id]
  key_name               = var.key_name

  user_data = <<-EOF
              #!/bin/bash
              yum update -y
              {% if database == "mysql" %}
              # Install MySQL
              yum install -y mysql-server
              systemctl start mysqld
              systemctl enable mysqld
              {% elif database == "postgresql" %}
              # Install PostgreSQL
              yum install -y postgresql postgresql-server
              postgresql-setup initdb
              systemctl start postgresql
              systemctl enable postgresql
              {% elif database == "mongodb" %}
              # Install MongoDB
              # Note: MongoDB installation requires additional configuration
              {% elif database == "redis" %}
              # Install Redis
              yum install -y redis
              systemctl start redis
              systemctl enable redis
              {% endif %}
              # Database setup requires additional configuration
              EOF

  tags = {
    Name = "${var.app_name}-{{ database }}"
  }
}
{% endif %}

# Data source for Amazon Linux 2 AMI
data "aws_ami" "amazon_linux" {
  most_recent = true
  owners      = ["amazon"]

  filter {
    name   = "name"
    values = ["amzn2-ami-hvm-*-x86_64-gp2"]
  }

  filter {
    name   = "virtualization-type"
    values = ["hvm"]
  }
}
